{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": { "list": [] },
  "description": "DigiWallet PPOB – API & Business Metrics",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "HTTP Traffic",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 1 },
      "id": 1,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (route, method)",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "title": "Request Rate (req/s)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "ms"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 1 },
      "id": 2,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_ms_bucket[1m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket[1m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_ms_bucket[1m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "title": "Request Latency (ms)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "5xx" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "4xx" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[1m]))",
          "legendFormat": "5xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"4..\"}[1m]))",
          "legendFormat": "4xx",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"2..\"}[1m]))",
          "legendFormat": "2xx",
          "refId": "C"
        }
      ],
      "title": "Error Rate by Status Family",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "max": 1, "min": 0 },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "text": {}, "textMode": "auto", "colorMode": "background" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=~\"2..\"}[5m])) / sum(rate(http_requests_total[5m]))",
          "legendFormat": "Success rate",
          "refId": "A"
        }
      ],
      "title": "Overall Success Rate (5m)",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 101,
      "title": "Business Metrics",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "failed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 16 },
      "id": 5,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(transaction_created_total[1m])) by (result)",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "title": "Transaction Rate (req/s) by Result",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "currencyIDR", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 16 },
      "id": 6,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(transaction_amount_total[5m])) by (status) * 300",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "title": "Transaction Volume / 5m (IDR)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "invalid_credentials" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 23 },
      "id": 7,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "sum(rate(auth_login_total[1m])) by (result)",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "title": "Login Attempts by Result (req/s)",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 },
      "id": 102,
      "title": "Node.js Runtime",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 31 },
      "id": 8,
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes",
          "legendFormat": "Heap used",
          "refId": "A"
        },
        {
          "expr": "nodejs_heap_size_total_bytes",
          "legendFormat": "Heap total",
          "refId": "B"
        },
        {
          "expr": "nodejs_external_memory_bytes",
          "legendFormat": "External",
          "refId": "C"
        }
      ],
      "title": "Heap Memory",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "s", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 31 },
      "id": 9,
      "targets": [
        {
          "expr": "rate(nodejs_eventloop_lag_seconds[1m])",
          "legendFormat": "Event loop lag",
          "refId": "A"
        }
      ],
      "title": "Event Loop Lag",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 38 },
      "id": 10,
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total[1m])",
          "legendFormat": "User CPU",
          "refId": "A"
        },
        {
          "expr": "rate(process_cpu_system_seconds_total[1m])",
          "legendFormat": "System CPU",
          "refId": "B"
        }
      ],
      "title": "CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short" },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 38 },
      "id": 11,
      "targets": [
        {
          "expr": "nodejs_active_handles_total",
          "legendFormat": "Active handles",
          "refId": "A"
        },
        {
          "expr": "nodejs_active_requests_total",
          "legendFormat": "Active requests",
          "refId": "B"
        }
      ],
      "title": "Node.js Active Handles & Requests",
      "type": "timeseries"
    }
  ],
  "refresh": "15s",
  "schemaVersion": 39,
  "tags": ["digiwallet", "nodejs", "api"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "DigiWallet – API Overview",
  "uid": "digiwallet-overview",
  "version": 1
}
